{
  "name": "eleventy-tailwindcss-starter",
  "version": "1.0.0",
  "description": "Eleventy starter with Tailwind CSS",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "rm -rf _site && npx @11ty/eleventy --serve --quiet && npx tailwindcss -i ./src/assets/input.css -o ./_site/assets/output.css --watch",
    "build": "npx eleventy && npx tailwindcss -i ./src/assets/input.css -o ./_site/assets/output.css --minify"
  },
  "author": "Casey Ocampo",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "tailwindcss": "^3.4.4"
  },
  "dependencies": {
    "html-minifier": "^4.0.0"
  }
}
